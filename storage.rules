rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 開発用: 基本的な制約付きアクセス
    // ⚠️ 警告: Phase 2で認証を実装予定
    match /{allPaths=**} {
      // 読み取りは誰でも可能
      allow read: if true;

      // 書き込みはファイルサイズを10MBに制限
      // これにより、ストレージコストの爆発的増加を防ぐ
      allow write: if request.resource.size < 10 * 1024 * 1024;
    }
  }
}


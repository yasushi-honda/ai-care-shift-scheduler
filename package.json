{
  "name": "シフト作成ツール",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:permission": "playwright test e2e/permission-errors.spec.ts",
    "test:e2e:emulator": "firebase emulators:exec --only auth,firestore 'playwright test'",
    "test:e2e:ci": "playwright test --config=playwright.ci.config.ts",
    "test:e2e:ci:emulator": "firebase emulators:exec --only auth,firestore 'playwright test --config=playwright.ci.config.ts'",
    "test": "npm run test:unit",
    "test:all": "npm run test:unit && npm run test:e2e",
    "seed:demo": "tsx scripts/seedDemoData.ts",
    "seed:demo:reset": "tsx scripts/seedDemoData.ts --reset",
    "cleanup:deleted-users": "tsx scripts/cleanupDeletedUsers.ts",
    "emulators": "firebase emulators:start --only auth,firestore,functions",
    "emulators:auth": "firebase emulators:start --only auth",
    "emulators:exec": "firebase emulators:exec --only auth,firestore,functions"
  },
  "dependencies": {
    "@google/genai": "^1.41.0",
    "chart.js": "^4.5.1",
    "firebase": "^12.9.0",
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "papaparse": "^5.5.3",
    "react": "^19.2.4",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^22.19.11",
    "@types/papaparse": "^5.5.2",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "firebase-admin": "^13.6.1",
    "happy-dom": "^20.6.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "web-vitals": "^5.1.0"
  }
}

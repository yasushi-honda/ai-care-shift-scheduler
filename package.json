{
  "name": "シフト作成ツール",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:permission": "playwright test e2e/permission-errors.spec.ts",
    "test:e2e:emulator": "firebase emulators:exec --only auth,firestore 'playwright test'",
    "test": "npm run test:unit && npm run test:e2e",
    "seed:demo": "tsx scripts/seedDemoData.ts",
    "seed:demo:reset": "tsx scripts/seedDemoData.ts --reset",
    "cleanup:deleted-users": "tsx scripts/cleanupDeletedUsers.ts",
    "emulators": "firebase emulators:start --only auth,firestore",
    "emulators:auth": "firebase emulators:start --only auth",
    "emulators:exec": "firebase emulators:exec --only auth,firestore"
  },
  "dependencies": {
    "@google/genai": "^1.22.0",
    "chart.js": "^4.5.1",
    "firebase": "^12.4.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "papaparse": "^5.5.3",
    "react": "^19.2.0",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.18.12",
    "@types/papaparse": "^5.5.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "autoprefixer": "^10.4.21",
    "firebase-admin": "^13.6.0",
    "happy-dom": "^20.0.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.6",
    "web-vitals": "^5.1.0"
  }
}
